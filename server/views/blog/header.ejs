<div id="navMenu" style="display: flex; justify-content: space-between; padding-right: 20px; padding-left: 10px;">
    <a id="homeBtn" href="/">Mystery blog</a>
    <% if (edit) { %> 
        <button onclick="save()" style=" display: flex; width: calc(100% - 570px); height: 30px; color: white; background-color: rgb(105, 105, 105); font-size: large; justify-content: center;">Save blog</button>
        <button onclick="window.location.href = '/blog/delete/<%= blogData.id %>'" style=" display: flex; width: 120px; height: 30px; color: red; background-color: rgb(105, 105, 105); font-size: large; justify-content: center;">Delete blog</button>
    <% } %>
    <button id="accountBtn" onclick="window.location.href = '/home'">Home</button>
</div>